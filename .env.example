# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0

# GitHub Configuration (Optional)
GITHUB_TOKEN=your_github_token_here
GITHUB_DEFAULT_REPO=https://github.com/your-username/your-repo

# Neo4j Configuration
# For local development: bolt://localhost:7687
# For cloud deployment: bolt://your-cloud-host:7687 or bolt://your-vm-ip:7687
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=vibeassistant

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your-secret-key-here

# Application Configuration
LOG_LEVEL=INFO
MAX_FILE_SIZE_KB=1000
DEFAULT_TASK_TYPE=development

# React App Configuration
# For local development: http://localhost:5000
# For cloud deployment: http://your-cloud-host:5000 or leave empty for relative URLs
REACT_APP_API_URL=http://localhost:5000
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=Vibe Assistant

# Development Configuration
GENERATE_SOURCEMAP=true
BROWSER=none

# Cloud Deployment Notes:
# 1. Update NEO4J_URI to point to your cloud Neo4j instance
# 2. Update REACT_APP_API_URL to your cloud backend URL or leave empty for relative URLs
# 3. Ensure Neo4j ports (7474, 7687) are accessible from your cloud VM
# 4. Update security groups/firewall rules to allow these ports 